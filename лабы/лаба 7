#include <iostream>
#include <vector>

//усовершенствованная сортировка вставками
void shellSort(std::vector<int>& mass)
{
    int k = mass.size() - 1;

    for (k; k > 0; k = (int)(k / 2))
    {
        for (int j = 1; j < mass.size(); j += k)
        {
            int temp = mass[j];
            int i = j - 1;
            while (i >= 0 && mass[i] > temp)
            {
                mass[i + 1] = mass[i];
                i = i - 1;
            }
            mass[i + 1] = temp;
        }

    }
}

int main()
{
    setlocale(LC_ALL, "Russian");
    int n;
    std::vector<int> mass;
    std::cout << "Введите длину массива: ";
    std::cin >> n;
    std::cout << std::endl << "Введите массив: ";
    for (int i = 0; i < n; i++)
    {
        int temp;
        std::cin >> temp;
        mass.push_back(temp);
    }
    shellSort(mass);
    std::cout << '\n' << "sorted: ";
    for (int i = 0; i < n; i++)
    {
        std::cout << mass[i] << " ";
    }
    std::system("pause");
}
